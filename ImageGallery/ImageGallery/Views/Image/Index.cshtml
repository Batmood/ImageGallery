@model List<ImageGallery.Models.EntityFramework.GalleryImage>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>My Images</h2>
@Html.ActionLink("Upload a Photo", "Upload", new { @class = "btn btn-primary" })
<br />
@Html.ActionLink("Back to Gallery List","Index","Gallery")
<br />
<hr />

<h1 class="font-weight-light text-center text-lg-left mt-4 mb-0"> My Images</h1>


<div id="gallery">
    @foreach (var item in Model)
    {
        <div class="item-container">
            <div class="gallery-item">
                <a href="~/Content/Images/@item.ImagePath" target="_blank">
                    <img src="~/Content/Images/@item.ImagePath" alt="">

                </a>
                <div class="description">
                    @item.ImageName
                </div>
                @Html.ActionLink("Delete", "Delete", "Image", new { id = item.Id }, new { @class = "btn btn=danger", onclick = "return confirm('Are you sure to delete this Image?')" })
            </div>
        </div>
       
    }


</div>


